@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <title>@Model.Value("pageTitle")</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container mt-5 w-50">
            <h1>@Model.Value("pageTitle")</h1>
            <ul class="list-group">
                @foreach (var eventNode in Model.Children.Where(x => x.ContentType.Alias == "event"))
                {
                    <li class="list-group-item">
                        <a href="@eventNode.Url()">@eventNode.Name</a>
                        <p>@eventNode.Value("eventDate") at @eventNode.Value("location")</p>
                    </li>
                }
            </ul>
        </div>
    </body>
</html>


